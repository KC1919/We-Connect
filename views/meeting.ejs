<script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js" defer></script>
<script src="/socket.io/socket.io.js" defer></script>
<script src="https://kit.fontawesome.com/62d14f866e.js" crossorigin="anonymous"></script>

<body>

	<!-- -----------header section-------------- -->
	<div class="header">

		<div class="header-left">
			<div class="logo-icon">

			</div>
			<div class="logo-name">
				<h4>Teams Call</h4>
			</div>
		</div>

		<div class="header-middle">
			<div>
				<h4 class="header-texts">Welcome, <%=name%>!</h4>
			</div>
		</div>
	</div>

	<!-- ---------------main body------------------- -->
	<div class="main-div">

		<!-- --------video grid and user controls section---------- -->
		<div class="main-left">
			<!------ video container -------->
			<div class="main-videos">
				<div id="video-grid">

				</div>
			</div>

			<!-- -----video controls-------- -->
			<div class="main-control-btns">

				<!-- video/audio toggle -->
				<div class="main-btn-div">
					<div class="mute-unmute-btn main-btn-div mute-btn">
						<i class="fas fa-microphone"></i>
					</div>
					<div class="video-on-off-btn main-btn-div video-btn">
						<i class="fas fa-video"></i>
					</div>
				</div>

				<!-- screenshare, participants list, raise hand, link share-->
				<div class="main-btn-div">
					<div class="screen-share main-btn-div">
						<i class="fas fa-photo-video"></i>
					</div>
					<div class="main-btn-div">
						<div class="dropdown">
							<i  class="fetch-meeting-participants fas fa-user-friends dropbtn"></i>
							<!-- <span>Participants</span> -->
							<div id="myDropdown" class="dropdown-content">
							</div>
						</div>
					</div>
					<div class="share-link main-btn-div">
						<i class="fa fa-share-alt"></i>
					</div>
					<div  class="hand-raise main-btn-div raise-hand">
						<i class="far fa-hand-paper"></i>
					</div>
				</div>
				<div class="main-btn-div">
					<div class="leave-meeting main-btn-div main-leave" style=" color: Tomato;">
						<i>
							<img class="end-call-img" src="/images/end-call.png" alt="">
						</i>
					</div>
				</div>
			</div>
		</div>

		<!-- --------------meeting chat section---------------- -->
		<div class="main-right">
			<div class="main-chat-header">
				<h6 style="padding: 15px 0;">Chat</h6>
			</div>
			<div class="main-chat-window">
				<ul class="messages">
				</ul>
			</div>
			<div class="main-input-container">
				<input id="chat-messages" type="text" class="form-control" placeholder="Type a message here...">
			</div>
		</div>


		<script src="/meetingScript.js" defer></script>

</body>

</html>
